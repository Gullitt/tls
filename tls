
#include<cmath>
#include <iostream> // Include the iostream library for input and output

using namespace std; // Use the standard namespace

int main() {
    double totalCost, amountPaid, change; // Variables to store total cost, amount paid, and change

    // Prompt the user for the total cost of the purchase
    cout << "Enter the total cost: ";
    cin >> totalCost;

    // Prompt the user for the amount paid by the customer
    cout << "Enter the amount paid: ";
    cin >> amountPaid;

    // Check if the amount paid is sufficient
    if (amountPaid >= totalCost) {
        change = amountPaid - totalCost; // Calculate the change
        cout << "Change to be returned: $" << change << endl; // Output the change
    } else {
        cout << "Error: Insufficient amount paid." << endl; // Error message for insufficient payment
    }
system("pause");
    return 0; // Return 0 to indicate successful program execution
}
